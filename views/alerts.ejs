<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu Alerts</title>
  </head>
  <body>
    <h1>Menu Alerts</h1>

    <% alerts.forEach(alert => { %>
    <h2><%= alert.name %></h2>
    <% if (alert.specials.length > 0) { %>
    <ul>
      <% alert.specials.forEach(special => { %>
      <li>
        <strong><%= special.name %></strong> - $<%= special.price %><br />
        <%= special.description %>
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No current specials</p>
    <% } %> <% }) %>

    <a href="/">Back to Home</a>
  </body>
</html>
